# Maintainer: Jonas Kvinge <jonas@jkvinge.net>
pkgname=strawberry
pkgver=@STRAWBERRY_VERSION_PAC_V@
pkgrel=@STRAWBERRY_VERSION_PAC_R@
pkgdesc="A music player aimed at audio enthusiasts and music collectors"
arch=(x86_64)
url="https://www.strawberrymusicplayer.org/"
license=(GPL3)
makedepends=(git cmake make gcc boost gettext qt5-tools)
depends=(
  desktop-file-utils
  hicolor-icon-theme
  gnutls
  udisks2
  protobuf
  qt5-base
  qt5-x11extras
  sqlite3
  alsa-lib
  libpulse
  dbus
  taglib
  gstreamer
  gst-plugins-base
  gst-plugins-good
  vlc
  chromaprint
  libgpod
  libcdio
  libmtp
  fftw
)
optdepends=(
  gst-plugins-bad
  gst-plugins-ugly
  gst-libav
)
provides=(strawberry)
conflicts=(strawberry)
source=("strawberry-@STRAWBERRY_VERSION_PACKAGE@.tar.xz")
sha256sums=('SKIP')

prepare() {
  mkdir -p build
}

build() {
  cd build
  cmake ../${pkgname}-@STRAWBERRY_VERSION_PACKAGE@ -DCMAKE_INSTALL_PREFIX=/usr
  make -j$(nproc)
}

package() {
  cd build
  make DESTDIR="${pkgdir}" install
}
